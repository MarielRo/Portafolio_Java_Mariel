<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>CrearModificarCliente</servlet-name>
        <servlet-class>Servlets.CrearModificarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProducto</servlet-name>
        <servlet-class>Servlets.AddProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProducto</servlet-name>
        <servlet-class>Servlets.EliminarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearModificarTrabajador</servlet-name>
        <servlet-class>Servlets.CrearModificarTrabajador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarTrabajador</servlet-name>
        <servlet-class>Servlets.EliminarTrabajador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Facturar</servlet-name>
        <servlet-class>Servlets.Facturar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelarFactura</servlet-name>
        <servlet-class>Servlets.CancelarFactura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarDetalle</servlet-name>
        <servlet-class>Servlets.EliminarDetalle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrearModificarCliente</servlet-name>
        <url-pattern>/CrearModificarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProducto</servlet-name>
        <url-pattern>/AddProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProducto</servlet-name>
        <url-pattern>/EliminarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearModificarTrabajador</servlet-name>
        <url-pattern>/CrearModificarTrabajador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarTrabajador</servlet-name>
        <url-pattern>/EliminarTrabajador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Facturar</servlet-name>
        <url-pattern>/Facturar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelarFactura</servlet-name>
        <url-pattern>/CancelarFactura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarDetalle</servlet-name>
        <url-pattern>/EliminarDetalle</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
